<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Book detail</h2>
        <table class="table">
          <tbody>
              <tr>
                <td><%= link_to(@user) do %>
                  <%= image_tag @user.get_profile_image, size: '50x50' %><br>
                  <%= @user.name %>
                  <% end %>
                </td>
                <td><%= link_to @bookshow.title,book_path(@bookshow) %></td>
                <td><%= @bookshow.body %></td>
                <td>
                  <% if @bookshow.favorited_by?(current_user) %>

                      <%= link_to book_favorites_path(@bookshow),method: :delete do %>
                        <p class="text-danger">♥<%= @bookshow.favorites.count %></p>
                      <% end %>

                  <% else %>

                      <%= link_to book_favorites_path(@bookshow),method: :post do %>
                        <p class="text-primary">♥<%= @bookshow.favorites.count %></p>
                      <% end %>

                  <% end %>
                </td>
                <td>コメント数：<%= @bookshow.book_comments.count %></td>
              <% if @user == current_user %>
                <td><%= link_to "Edit" ,edit_book_path(@bookshow) ,class: "btn btn-sm btn-success" %></td>
                <td><%= link_to "Destroy" ,book_path(@bookshow) ,class: "btn btn-sm btn-danger", method: :delete %></td>
              <% end %>
              </tr>
          </tbody>
        </table>
        <div class="comment-all">
          <table>
            <tbody>

                <% @bookshow.book_comments.each do |book_comment| %>
                  <tr>
                  <td>
                  <%= image_tag book_comment.user.get_profile_image, size: '50x50' %><br>
                  <%= link_to book_comment.user.name,user_path(book_comment.user) %>
                  </td>
                  <td>
                  <%= book_comment.comment %>
                  </td>
                  <td>
                  <%= link_to "Destroy" ,book_book_comment_path(book_comment.book,book_comment) ,class: "btn btn-sm btn-danger", method: :delete %>
                  </td>
                  </tr>
                <% end %>

            </tbody>
          </table>
        </div>

        <div class="comment">
          <%= form_with model:[@bookshow,@book_comment] do |f| %>
            <%= f.text_area :comment, rows: "5" %>
            <%= f.submit "送信" %>
          <% end %>
        </div>
    </div>
  </div>
</div>